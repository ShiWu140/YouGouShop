<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dushiwu.springbootdemo.mapper.UserMapper">
    <select id="selectLimit" resultType="User">
        select *
        from s_user
        limit #{start},#{limit};
    </select>
    <select id="selectCount" resultType="java.lang.Long">
        select count(*)
        from s_user;
    </select>
    <select id="selectAll" resultType="User">
        select *
        from s_user;
    </select>
    <select id="selectId" resultType="User">
        select *
        from s_user
        where user_id = #{userId};
    </select>
    <select id="selectByName" resultType="User">
        select *
        from s_user
        where user_name = #{userName};
    </select>
    <insert id="insert" parameterType="User">
        insert into s_user (user_id, user_name, user_pwd, user_type)
        values (#{userId}, #{userName}, #{userPwd}, #{userType})
    </insert>
    <delete id="delete" parameterType="String">
        delete
        from s_user
        where user_id = #{userId}
    </delete>
    <update id="update" parameterType="User">
        update s_user
        set user_name = #{userName},
            user_pwd  = #{userPwd},
            user_type = #{userType}
        where user_id = #{userId}
    </update>

</mapper>
